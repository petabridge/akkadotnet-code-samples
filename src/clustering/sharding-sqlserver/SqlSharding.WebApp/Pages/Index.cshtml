@page
@model IndexModel
@{
    ViewData["Title"] = "Available Products";
}

<div class="text-center">
    <h1 class="display-4">Available Products</h1>
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            @if (Model.Products.Count == 0)
            {
                <strong>No products created yet.</strong>
            }
            else
            {
                <ol>
                    @foreach (var (productId, productName, currentPrice) in Model.Products)
                    {
                        <li>
                            <a asp-page="/product" asp-route-productId="@productId">@productName</a> [@($"{currentPrice:C}")]
                        </li>
                    }
                </ol>
            }
        </div>
        <div class="col">
        </div>
    </div>
</div>